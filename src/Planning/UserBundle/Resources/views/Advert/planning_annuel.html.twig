{# empty Twig template #}
{% extends '::base_planning.html.twig' %}
{% block body %}
    <div class="page">
        {% include ('PlanningUserBundle:Advert:menu.html.twig') %}
        <div class="page-content">
            <div class="titre-content">
                {#Promotion NÂ°{{Promotion}}#}
            </div> 
            <table>
                {% for ligne in 1..32 %}
                    <tr>
                        {% for colonne in 1..13 %}
                            <th>
                                {% if ligne==1 and colonne==2 %}
                                    Janvier
                                {% endif %}
                                {% if ligne==1 and colonne==3 %}
                                    Fevrier
                                {% endif %}
                                {% if ligne==1 and colonne==4 %}
                                    Mars
                                {% endif %}
                                {% if ligne==1 and colonne==5 %}
                                    Avril
                                {% endif %}
                                {% if ligne==1 and colonne==6 %}
                                    Mai
                                {% endif %}
                                {% if ligne==1 and colonne==7 %}
                                    Juin
                                {% endif %}
                                {% if ligne==1 and colonne==8 %}
                                    Juillet
                                {% endif %}
                                {% if ligne==1 and colonne==9 %}
                                    Aout
                                {% endif %}
                                {% if ligne==1 and colonne==10 %}
                                    Septembre
                                {% endif %}
                                {% if ligne==1 and colonne==11 %}
                                    Ocotbre
                                {% endif %}
                                {% if ligne==1 and colonne==12 %}
                                    Novembre
                                {% endif %}
                                {% if ligne==1 and colonne==13 %}
                                    Decembre
                                {% endif %}
                                
                                {%for entity in Cours %}
                                    {% if entity.dateDebut|date("m")==colonne-1 and entity.dateFin|date("d")>=ligne-1 and entity.dateDebut|date("d")<=ligne-1 %}
                                        {{entity.matiereidmatiere.libelle}}
                                    {% endif %}
                                {% endfor %}
                                {% for i in 2..32 %}
                                    {% if ligne==i and colonne==1 %}
                                        {{ligne-1}}
                                    {% endif %}
                                {% endfor %}
                            </th>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
