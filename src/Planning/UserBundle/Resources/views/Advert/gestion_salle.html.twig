{% extends '::base_admin.html.twig' %}
{% block body %}
    <div class="page">
        {% include ('PlanningUserBundle:Advert:header.html.twig') %}
        {% include ('PlanningUserBundle:Advert:admin_menu.html.twig') %}
        <div class="page-content">
            {#action="traitement.php"#}
            <table id="salle" class="display" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nnuméro de Salle</th>
                        <th>Nombre de PC</th>
                        <th>Libellé du Cours</th>
                        <th>Id du Cours</th>
                        {#<th>Id User</th>
                        <th>N° de promotion</th>#}
                    </tr>
                </thead>
                
                <tfoot>
                    <tr>
                        <th>Nnuméro de Salle</th>
                        <th>Nombre de PC</th>
                        <th>Libellé du Cours</th>
                        <th>Id du Cours</th>
                        {#<th>Id User</th>
                        <th>N° de promotion</th>#}
                    </tr>
                </tfoot>

                <tbody>
                    {% for entity in Salle %}
                        <tr>
                            <td>{{entity.numSalle}}</td>
                            <td>{{entity.nbPc}}</td>
                            {% if entity.siteidsite != null %}
                            <td>{{entity.siteidsite.libelle}}</td>
                            {% else %}
                                <td>Null</td>
                            {% endif %}
                            {% if entity.siteidsite != null %}
                            <td>{{entity.coursidcours.idcours}}</td>
                            {% else %}
                                <td>Null</td>
                            {% endif %}
                            {#<td>{{entity.useriduser.id}}</td>
                            <td>{{entity.promotionidpromotion.numPromotion}}</td>#}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
    $(document).ready(function() {
    $('#salle').dataTable();
    } );
    </script>
{% endblock %}