{% extends '::base_admin.html.twig' %}
{% block body %}
    <div class="page">
        {% include ('PlanningUserBundle:Advert:header.html.twig') %}
        {% include ('PlanningUserBundle:Advert:admin_menu.html.twig') %}
        <div class="page-content">
            {#action="traitement.php"#}
            <table id="eleve" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Id User</th>
                        <th>N° de promotion</th>
                    </tr>
                </thead>
 
                <tfoot>
                    <tr>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Id User</th>
                        <th>N° de promotion</th>
                    </tr>
                </tfoot>
 
                <tbody>
                    {% for entity in Eleve %}
                        <tr>
                            <td>{{entity.prenom}}</td>
                            <td>{{entity.nom}}</td>
                            <td>{{entity.useriduser.id}}</td>
                            <td>{{entity.promotionidpromotion.numPromotion}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
    $(document).ready(function() {
    $('#eleve').dataTable();
    } );
    </script>
{% endblock %}